# Пример конфигурации для production деплоя
# Скопируйте этот файл в .env и заполните значения

# ===============================
# Docker Registry
# ===============================
REGISTRY=ghcr.io
REPOSITORY=your-github-username/golang-project
IMAGE_TAG=latest

# ===============================
# Application Ports
# ===============================
AUTH_SERVICE_PORT=50051
REST_API_PORT=8080

# ===============================
# Database Configuration
# ===============================
POSTGRES_HOST=postgres-auth
POSTGRES_PORT=5432
POSTGRES_DB=authdb
POSTGRES_USER=authuser
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# ===============================
# Application Secrets
# ===============================
# Генерируйте JWT ключ с помощью: openssl rand -base64 32
JWT_SECRET_KEY=CHANGE_ME_JWT_SECRET_KEY

# ===============================
# Logging
# ===============================
LOG_LEVEL=info

# ===============================
# Deployment Info (автоматически заполняется CI/CD)
# ===============================
DEPLOYED_BY=
DEPLOYED_AT=
GIT_COMMIT=
GIT_BRANCH=

